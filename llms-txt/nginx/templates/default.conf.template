server {
    listen 80;
    server_name localhost;
    
    # Serve llms.txt
    location = /llms.txt {
        alias /usr/share/nginx/html/md/index.md;
        add_header Content-Type "text/plain; charset=utf-8" always;
    }
    
    # Serve markdown files with custom MIME type
    location ~* \.md$ {
        root /usr/share/nginx/html/md;
        types {
            text/markdown md;
        }
    }
    
    # Default location - prioritize HTML files, use standard directory fallback
    location / {
        autoindex on;
        try_files $uri $uri/ =404;
    }
}
